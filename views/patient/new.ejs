<% layout("/layouts/boilerplate.ejs") -%>
<div style="margin-top: 100px;">
    <form action="/patient" method="post">
        <div class="row">
            <div class="col-8 offset-2">
                <h2> Enter Patient Details</h2>
                    <input type="hidden" id="rfid" name="patient[rfid]" class="form-control" value="<%= rfid %>" >
                <div class="mt-5">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="patient[name]" class="form-control">
                </div>
                <div class="mt-5">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="patient[email]" class="form-control">
                </div>
                <div class="mt-5">
                    <label for="contact" class="form-label">Contact No:</label>
                    <input type="number" id="contact" name="patient[contact]" class="form-control">
                </div>
                <div class="mt-5">
                    <button class="btn btn-outline-primary">Submit</button>
                </div>
            </div>
        </div>
        
    </form>
</div>